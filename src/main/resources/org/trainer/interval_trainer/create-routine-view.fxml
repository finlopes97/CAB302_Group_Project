<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.SpinnerValueFactory?>
<?import javafx.scene.control.SpinnerValueFactory.IntegerSpinnerValueFactory?>

<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.ColumnConstraints?>

<?import javafx.scene.layout.Pane?>
<ScrollPane prefHeight="942.0" prefWidth="824.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.trainer.interval_trainer.controller.CreateRoutinesController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
        <VBox spacing="10.0">
            <VBox alignment="TOP_LEFT" spacing="10.0">
                <Button fx:id="backButton" text="Back" onAction="#onBackButton"/>
                <Label text="Name of Routine:" style="-fx-font-size: 20; -fx-font-weight: bold;"/>
                <TextField fx:id="routineNameField" promptText="Enter the routine name"/>
                <Label text="Type:" style="-fx-font-size: 20; -fx-font-weight: bold;"/>
                <TextField fx:id="routineTypeField" promptText="Enter the type of routine e.g running, walking"/>
                <Label text="Description:" style="-fx-font-size: 20; -fx-font-weight: bold;"/>
                <TextArea fx:id="descriptionField" promptText="Enter a description about the routine"/>
                <Label text="Number of Intervals:" style="-fx-font-size: 20; -fx-font-weight: bold;"/>
                <Spinner fx:id="intervalNum" GridPane.columnIndex="1">
                    <valueFactory>
                        <SpinnerValueFactory.IntegerSpinnerValueFactory min="0" max="60" initialValue="1" amountToStepBy="1"/>
                    </valueFactory>
                </Spinner>
                <Label text="Time of Interval:" style="-fx-font-size: 20; -fx-font-weight: bold;"/>
                <GridPane>
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="10.0" />
                        <ColumnConstraints hgrow="SOMETIMES" prefWidth="10.0" /> <!-- Spacing between "Minutes" label and spinner -->
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="10.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="10.0" /> <!-- Spacing between spinner and "Seconds" label -->
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="10.0" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                    <Label text="Minutes" GridPane.columnIndex="0" style="-fx-font-size: 15; -fx-font-weight: bold;"/>
                    <Spinner fx:id="mins" GridPane.columnIndex="1">
                        <valueFactory>
                            <SpinnerValueFactory.IntegerSpinnerValueFactory min="0" max="60" initialValue="1" amountToStepBy="1"/>
                        </valueFactory>
                    </Spinner>
                    <!-- Empty Pane for spacing -->
                    <Pane GridPane.columnIndex="2" prefWidth="5.0"/>
                    <Label text="Seconds" GridPane.columnIndex="3" style="-fx-font-size: 15; -fx-font-weight: bold;"/>
                    <Spinner fx:id="secs" GridPane.columnIndex="4">
                        <valueFactory>
                            <SpinnerValueFactory.IntegerSpinnerValueFactory min="0" max="59" initialValue="0" amountToStepBy="1"/>
                        </valueFactory>
                    </Spinner>
                    <!-- Empty Pane for spacing -->
                    <Pane GridPane.columnIndex="5" prefWidth="100.0"/>
                </GridPane>

                <Button text="Create" onAction="#onCreateRoutineButton"/>
            </VBox>
        </VBox>
</ScrollPane>
