<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>


<?import javafx.geometry.Insets?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.trainer.interval_trainer.controller.activity.ActivityController"
            prefHeight="400.0" prefWidth="600.0">


<VBox alignment="CENTER" spacing="10.0">
    <padding>
        <Insets bottom="190" left="190" right="190" top="190"/>
    </padding>
    <Label fx:id="name" text="name" style="-fx-font-size: 40;"/>
    <Label fx:id="debug" />
    <Label fx:id="timerLabel" style="-fx-font-size: 35;"/>

    <Button text="START" onAction="#onStart" />
    <Button text="Pause" onAction="#onPauseButtonClick"/>
    <HBox alignment="CENTER" spacing="20.0">
        <VBox fx:id="children"/>
    <Button text="Next" onAction="#onNext"/>
    <Button text="Prev" onAction="#onPrev"/>
    </HBox>
    <Button text="Back" onAction="#onArrowButtonClick"/>

</VBox>

</AnchorPane>



