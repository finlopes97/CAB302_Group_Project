<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>
<BorderPane fx:id="helloRoot" xmlns:fx="http://javafx.com/fxml" fx:controller="org.trainer.interval_trainer.controller.HelloController" style="-fx-font-family: 'Arial'">
    <!--    Header-->
    <top>
        <HBox alignment="TOP_LEFT" spacing="10.0" style="-fx-border-color: black; -fx-border-width: 1px;">

            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
            <!-- Default Logo Image -->
            <ImageView fitWidth="50" fitHeight="50">
                <image>
                    <Image url="@logo.png" />
                </image>
            </ImageView>
            <!-- App Name Label -->
            <Label fx:id="header" style="-fx-font-size: 35; -fx-font-weight: bold" />
        </HBox>

    </top>
    <center>
        <VBox alignment="TOP_CENTER" spacing="20">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
            </padding>
            <!-- Welcome Text -->
            <VBox alignment="TOP_LEFT">
                <Label fx:id="welcomeText" style="-fx-font-size: 35; -fx-font-weight: bold;" />
            </VBox>
            <!-- Current Routines -->
            <VBox alignment="TOP_LEFT" spacing="10">
                <padding>
                    <Insets bottom="20.0" top="20.0"/>
                </padding>
                <Label text="Suggested Routines" style="-fx-font-size: 25; -fx-font-weight: bold" />
                <!-- Grid of Routines -->
                <GridPane fx:id="routinesGrid" alignment="CENTER" hgap="10" vgap="10">
                    <!-- Headings for Columns -->
                    <Label text="Routine Name" GridPane.columnIndex="0" GridPane.rowIndex="0" style="-fx-font-size: 14; -fx-font-weight: bold"/>
                    <Label text="Interval Duration" GridPane.columnIndex="1" GridPane.rowIndex="0" style="-fx-font-size: 14; -fx-font-weight: bold"/>
                    <Label text="Description" GridPane.columnIndex="2" GridPane.rowIndex="0" style="-fx-font-size: 14; -fx-font-weight: bold"/>
                    <Label text="Routine Duration" GridPane.columnIndex="3" GridPane.rowIndex="0" style="-fx-font-size: 14; -fx-font-weight: bold"/>
                </GridPane>
            </VBox>

            <!-- Suggested Routines -->
            <VBox alignment="TOP_LEFT" spacing="10">
                <padding>
                    <Insets bottom="20.0" top="20.0"/>
                </padding>
                <Label text="Suggested Routines" style="-fx-font-size: 25; -fx-font-weight: bold" />
                <!-- Grid of Routines -->
                <GridPane fx:id="suggestedRoutinesGrid" alignment="CENTER" hgap="10" vgap="10">
                    <!-- Headings for Columns -->
                    <Label text="Routine Name" GridPane.columnIndex="0" GridPane.rowIndex="0" style="-fx-font-size: 14; -fx-font-weight: bold"/>
                    <Label text="Interval Duration" GridPane.columnIndex="1" GridPane.rowIndex="0" style="-fx-font-size: 14; -fx-font-weight: bold"/>
                    <Label text="Description" GridPane.columnIndex="2" GridPane.rowIndex="0" style="-fx-font-size: 14; -fx-font-weight: bold"/>
                    <Label text="Routine Duration" GridPane.columnIndex="3" GridPane.rowIndex="0" style="-fx-font-size: 14; -fx-font-weight: bold"/>
                </GridPane>
            </VBox>
        </VBox>
    </center>
    <bottom>
        <HBox alignment="CENTER" spacing="20.0">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
            </padding>
            <Button fx:id="homeButton" text="Home" onAction="#onHomeButtonClick"/>
            <Button fx:id="createRoutinesButton" text="Create Routines" onAction="#onCreateRoutinesButtonClick"/>
            <Button fx:id="searchButton" text="Search" onAction="#onSearchButtonClick"/>
            <Button fx:id="profileButton" text="Profile" onAction="#onProfileButtonClick"/>
            <Button fx:id="settingsButton" text="Settings" onAction="#onSettingsButtonClick"/>
            <Button fx:id="activityButton" text="Activity" onAction="#onActivityButtonClick"/>
        </HBox>
    </bottom>
</BorderPane>
