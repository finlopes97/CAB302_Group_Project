<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.shape.Line?>
<?import javafx.scene.layout.GridPane?>
<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="org.trainer.interval_trainer.HelloController">
    <!--    Header-->
    <top>
        <HBox alignment="TOP_LEFT" spacing="10.0" >

            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
            </padding>
            <!-- Default Logo Image -->
            <ImageView fitWidth="50" fitHeight="50">
                <image>
                    <Image url="@logo.png" />
                </image>
            </ImageView>
            <!-- App Name Label -->
            <Label fx:id="header" style="-fx-font-size: 30;" />
        </HBox>

    </top>
    <center>
        <VBox alignment="TOP_CENTER" spacing="20">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
            </padding>
            <!-- Welcome Text -->
            <VBox alignment="CENTER" >
                <Label fx:id="welcomeText" style="-fx-font-size: 25;" />
            </VBox>
            <!-- Current Routines -->
            <VBox alignment="CENTER" spacing="10">
                <Label text="Current Routines" style="-fx-font-size: 20;"/>
                <!-- Headings for Columns -->
                <HBox alignment="CENTER" spacing="10">
                    <Label text="Routine Name" />
                    <Label text="Interval Duration" />
                    <Label text="Description" />
                    <Label text="Progress" />
                </HBox>
                <!-- Grid of Routines -->
                <GridPane fx:id="routinesGrid" alignment="CENTER" hgap="10" vgap="10">
                    <!-- Dummy data will be populated here -->
                </GridPane>
            </VBox>
            <!-- Suggested Routines -->
            <VBox alignment="CENTER" spacing="10">
                <Label text="Suggested Routines" style="-fx-font-size: 20;"/>
                <!-- Headings for Columns -->
                <HBox alignment="CENTER" spacing="10">
                    <Label text="Routine Name" />
                    <Label text="Interval Duration" />
                    <Label text="Description" />
                    <Label text="Routine Duration" />
                </HBox>
                <GridPane fx:id="suggestedRoutinesGrid" alignment="CENTER" hgap="10" vgap="10">
                    <!-- Dummy data will be populated here -->
                </GridPane>
            </VBox>
        </VBox>
    </center>
    <bottom>
        <HBox alignment="CENTER" spacing="20.0">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
            </padding>
            <Button text="Home" />
            <Button text="Create Routines"/>
            <Button text="Search" />
            <Button text="Profile" />
            <Button text="Settings" />
        </HBox>
    </bottom>
</BorderPane>
