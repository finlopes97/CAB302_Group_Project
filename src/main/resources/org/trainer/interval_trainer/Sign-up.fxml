<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.HBox?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.trainer.interval_trainer.UserRegistration.SignUpController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <!-- App Name -->
    <Label text="Interval Trainer" style="-fx-font-weight: bold; -fx-font-size: 72px;"/>

    <!-- Sign Up Form -->
    <Label text="Sign Up" style="-fx-font-size: 24px;"/>

    <!-- Name Entry -->
    <TextField fx:id="usernameField" promptText="Name" style="-fx-border-radius: 10px;"/>

    <!-- Email Entry -->
    <TextField fx:id="emailField" promptText="Email" style="-fx-border-radius: 10px;"/>

    <!-- Password Entry -->
    <TextField fx:id="passwordField" promptText="Password" style="-fx-border-radius: 10px;"/>

    <!-- Confirm Password Entry -->
    <TextField promptText="Confirm Password" style="-fx-border-radius: 10px;"/>

    <!-- Buttons Container -->
    <HBox spacing="20.0">
        <!-- Back Arrow Button -->
        <Button text="←" style="-fx-font-size: 24px;" onAction="#onBackHomeButton"/>

        <!-- Sign Up Button -->
        <Button text="Sign Up" style="-fx-border-radius: 10px;" onAction="#onSignUpButton"/>
    </HBox>
</VBox>
