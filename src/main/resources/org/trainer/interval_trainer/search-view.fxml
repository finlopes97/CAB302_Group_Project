<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<BorderPane fx:id="searchRoot" xmlns:fx="http://javafx.com/fxml" fx:controller="org.trainer.interval_trainer.controller.SearchController" style="-fx-font-family: 'Arial';">
    <center>
        <VBox alignment="TOP_CENTER" spacing="20">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            <VBox alignment="TOP_LEFT">
                <Label text="Search" style="-fx-font-size: 35; -fx-font-weight: bold;" />
            </VBox>
            <HBox alignment="CENTER" spacing="10">
                <TextField fx:id="searchField" promptText="Enter your search query" HBox.hgrow="ALWAYS"/>
                <Button text="Search" onAction="#onSearchButtonClick" fx:id="searchButton"/>
            </HBox>
            <Label fx:id="searchResultLabel" text="Search results will appear here" style="-fx-font-size: 16;"/>
            <Label text="Suggested Routines" style="-fx-font-size: 25; -fx-font-weight: bold"/>
            <GridPane fx:id="suggestedRoutinesGrid" alignment="CENTER" hgap="10" vgap="10">
                <Label text="Routine Name" GridPane.columnIndex="0" GridPane.rowIndex="0" style="-fx-font-size: 14; -fx-font-weight: bold"/>
                <Label text="Interval Duration" GridPane.columnIndex="1" GridPane.rowIndex="0" style="-fx-font-size: 14; -fx-font-weight: bold"/>
                <Label text="Description" GridPane.columnIndex="2" GridPane.rowIndex="0" style="-fx-font-size: 14; -fx-font-weight: bold"/>
                <Label text="Routine Duration" GridPane.columnIndex="3" GridPane.rowIndex="0" style="-fx-font-size: 14; -fx-font-weight: bold"/>
            </GridPane>
        </VBox>
    </center>
</BorderPane>
