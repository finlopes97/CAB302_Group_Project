<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox maxWidth="-Infinity" prefHeight="53.0" prefWidth="475.0" spacing="1.0" id="item"
      xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
    <HBox prefHeight="71.0" prefWidth="303.0">
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
        </padding>

        <TextField fx:id="name" maxWidth="-Infinity" prefHeight="26.0" prefWidth="156.0" promptText="Name">
            <HBox.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </HBox.margin>
        </TextField>
        <Region prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS"/>
        <Button fx:id="delete" onAction="#deleteBlock" alignment="TOP_LEFT" prefHeight="26.0" prefWidth="99.0"
                text="delete">
            <HBox.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </HBox.margin>
        </Button>
        <Button fx:id="openPopup" onAction="#openPopup" prefHeight="26.0" prefWidth="109.0" text="01:00">
            <HBox.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </HBox.margin>
        </Button>
    </HBox>
</VBox>
