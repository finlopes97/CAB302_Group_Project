<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Label?>
<fx:root type="VBox" maxWidth="-Infinity" prefHeight="53.0" prefWidth="475.0" spacing="1.0" id="item"
         xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
    <HBox prefHeight="71.0" prefWidth="303.0" alignment="BOTTOM_CENTER">
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
        </padding>
        <VBox>
            <Label text="Block Name" style="-fx-font-size: 15; -fx-font-weight: bold;"/>
            <TextField fx:id="name" maxWidth="-Infinity" prefHeight="26.0" prefWidth="156.0" promptText="Name">
                <HBox.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                </HBox.margin>
            </TextField>
            <Region prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS"/>
        </VBox>
        <VBox>
            <Label text="Block Length" style="-fx-font-size: 15; -fx-font-weight: bold;"/>
            <Button fx:id="openPopup" onAction="#openPopup" prefHeight="26.0" prefWidth="109.0" text="01:00">
                <HBox.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                </HBox.margin>
            </Button>
        </VBox>
        <Button fx:id="delete" onAction="#deleteBlock" alignment="TOP_LEFT" prefHeight="26.0" prefWidth="99.0"
                text="Delete">
            <HBox.margin>
                <Insets left="10.0" right="10.0"/>
            </HBox.margin>
        </Button>
    </HBox>
</fx:root>
