<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>


<?import javafx.geometry.Insets?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.trainer.interval_trainer.Activity.ActivityController"
            maxHeight="400.0" maxWidth="600.0">

<VBox alignment="CENTER" spacing="10.0">
    <padding>
        <Insets bottom="190" left="190" right="190" top="190"/>
    </padding>
    <Label text="Interval Name" style="-fx-font-size: 40;"/>
    <Label text="00:00" fx:id="timerLabel" style="-fx-font-size: 35;"/>
    <Label text="1/3" style="-fx-font-size: 20;"/>
    <Button text="START" onAction="#onStartButtonClick"/>
    <HBox alignment="CENTER" spacing="20.0">
        <Button text="Back" onAction="#onArrowButtonClick"/>
        <Button text="Pause" onAction="#onPauseButtonClick"/>
    </HBox>
</VBox>


</AnchorPane>
