<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>
<BorderPane fx:id="helloRoot" xmlns:fx="http://javafx.com/fxml" fx:controller="org.trainer.interval_trainer.controller.HomeController" style="-fx-font-family: 'Arial'; -fx-background-color: #f3f8f5;">
    <center>
        <VBox alignment="TOP_CENTER" spacing="20">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
            </padding>
            <!-- Welcome Text -->
            <VBox alignment="TOP_CENTER">
                <Label fx:id="welcomeText" style="-fx-font-size: 35; -fx-font-weight: bold; -fx-text-fill: #090e0b;" />
            </VBox>
            <!-- Current Routines -->
            <VBox alignment="TOP_LEFT" spacing="10">
                <padding>
                    <Insets bottom="20.0" top="20.0"/>
                </padding>
                <Label text="My Routines" style="-fx-font-size: 25; -fx-font-weight: bold; -fx-text-fill: #090e0b;"/>
                <VBox fx:id="children" spacing = "2"/>
            </VBox>

            <!-- Suggested Routines -->
            <VBox alignment="TOP_CENTER" spacing="10">
                <padding>
                    <Insets bottom="20.0" top="20.0"/>
                </padding>
                <Label text="Suggested Routines" style="-fx-font-size: 25; -fx-font-weight: bold; -fx-text-fill: #090e0b;" />
                <GridPane fx:id="suggestedRoutinesGrid2" alignment="TOP_CENTER" hgap="10" vgap="10">
                    <Label text="Routine Name" GridPane.columnIndex="0" GridPane.rowIndex="0" style="-fx-font-size: 14; -fx-font-weight: bold; -fx-text-fill: #090e0b;"/>
                    <Label text="User" GridPane.columnIndex="1" GridPane.rowIndex="0" style="-fx-font-size: 14; -fx-font-weight: bold; -fx-text-fill: #090e0b;"/>
                    <Label text="Description" GridPane.columnIndex="2" GridPane.rowIndex="0" style="-fx-font-size: 14; -fx-font-weight: bold; -fx-text-fill: #090e0b;"/>
                    <Label text="Routine Duration" GridPane.columnIndex="3" GridPane.rowIndex="0" style="-fx-font-size: 14; -fx-font-weight: bold; -fx-text-fill: #090e0b;"/>
                </GridPane>
                <VBox fx:id="children2"/>
            </VBox>
        </VBox>
    </center>
</BorderPane>
